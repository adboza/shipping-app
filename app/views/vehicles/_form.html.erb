<div class="container-fluid mb-3">
  <%= form_with(model: @vehicle) do |f| %>
    <div>
      <%= f.label :licence_plate, class:"form-label" %>:
      <%= f.text_field :licence_plate, class:"form-control" %>
    </div>
    <div>
      <%= f.label :model, class:"form-label" %>:
      <%= f.text_field :model, class:"form-control" %>
    </div>
    <div>
      <%= f.label :year, class:"form-label" %>:
      <%= f.date_field :year, class:"form-control" %>
    </div>
    <div>
      <%= f.label :status, class:"form-label" %>: <%= f.select :status, [[t(:unavailable), :unavailable] , [t(:on_delivery), :on_delivery] , [t(:available), :available] ] , class:"form-control"%>      
    </div>
    <div>
      <%= f.label :load_capacity, class:"form-label" %>:
      <%= f.number_field :load_capacity, class:"form-control", placeholder:"kg" %>
    </div>
    <div>   
      <%= f.label :vehicle_type_id , class:"form-label" %>: 
      <%= f.collection_select :vehicle_type_id, @vehicle_types, :id, :vehicle_type, class:"form-control" %>
    <div>
    <div>
      <%= f.submit 'Salvar', class:"btn btn-warning navbar-brand" %>
    </div>
  <%end%>
</div>
