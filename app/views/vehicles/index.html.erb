<div class="container-fluid " >
  <h2 class="col" >Veículos</h2>  
  <div class="col" ></div>
</div><br>
<div class="container-fluid row px-4" >
  <% if @vehicles.any? %>
    <% @vehicles.each do |vehicle|%>
      <div class="card alert alert-secondary me-4" style="width: 20rem;" >
        <div class="card-body">
          <dl>        
              <dt class="card-title"><%= Vehicle.human_attribute_name(:vehicle_type_id) %>: <%=vehicle.vehicle_type_id%> </dt>
              <dd  class="card-text"><%= Vehicle.human_attribute_name(:licence_plate) %>: <%= vehicle.licence_plate %></dd>
              <dd  class="card-text"><%= Vehicle.human_attribute_name(:year) %>: <%= vehicle.year %></dd>
              <dd  class="card-text"><%= Vehicle.human_attribute_name(:status) %>: <%= vehicle.status %></dd>       
          </dl>
          <%= "Detalhes - #{vehicle.licence_plate} ,vehicle , type:button, class:btn btn-warning" %>
        </div>
      </div>
    <%end%>
  <% else %>
    <p>Não existem veícles cadastradas.</p>
  <% end %>
</div>
