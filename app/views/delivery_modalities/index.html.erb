<div class="container-fluid " >
  <h2 class="col" >Modalidades de Entrega</h2>  
  <div class="col" >
  <% if current_user.user_access == 'admin_user' %>
  <%= link_to 'Cadastrar Modalidade', new_delivery_modality_path ,type:"button", class:"btn btn-warning navbar-brand"%>  
  <% end %>
  </div>
</div><br>
<div class="container-fluid row px-4" >
  <% if @delivery_modalities.any? %>
  <% @delivery_modalities.each do |m|%>
    <div class="card alert alert-secondary me-4" style="width: 20rem;" >
      <div class="card-body">
        <dl>        
            <dt class="card-title"><%= DeliveryModality.human_attribute_name(:mod_name) %>: <%=m.mod_name%> </dt>
            <dd  class="card-text"><%= DeliveryModality.human_attribute_name(:mod_price) %>: <%= number_to_currency(m.mod_price) %></dd>
            <dd  class="card-text"><%= DeliveryModality.human_attribute_name(:status) %>: <%= t(m.status) %></dd>   
        </dl>
        <%= link_to "Detalhes - #{m.mod_name}", m, type:"button", class:"btn btn-warning"%>
      </div>
    </div>
    <%end%>
  <% else %>
    <p>NÃ£o existem modalidades cadastradas.</p>
  <% end %>
</div>