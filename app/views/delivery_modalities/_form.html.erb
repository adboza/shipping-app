<div class="container-fluid mb-3">
  <%= form_with(model: @delivery_modality) do |f| %>
    <div>
      <%= f.label :mod_name, class:"form-label" %>:
      <%= f.text_field :mod_name, class:"form-control" %>
    </div>
    <div>
      <%= f.label :mod_price, class:"form-label" %>:
      <%= f.number_field :mod_price, step: 0.01, class:"form-control" %>
    </div>
    <div>
      <%= f.submit 'Salvar', class:"btn btn-warning navbar-brand"%>
    </div>
  <%end%>
</div>
