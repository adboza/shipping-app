<h2><%= ServiceOrder.model_name.human %> <%= @service_order.tracking_code%></h2>

<section id="service_order" class="container-fluid">
  <dl>
    <dt><strong><%= ServiceOrder.human_attribute_name(:tracking_code) %>:</strong> <%= @service_order.tracking_code %> </dt>
    <dt><strong><%= ServiceOrder.human_attribute_name(:departure_address) %>:</strong></dt><dd> <%= @service_order.departure_address %> </dd>
    <dt><strong><%= ServiceOrder.human_attribute_name(:delivery_address) %>:</strong> </dt><dd><%= @service_order.delivery_address %> </dd>
    <dt><strong><%= ServiceOrder.human_attribute_name(:shipping_distance) %>:</strong></dt><dd> <%= number_to_human(@service_order.shipping_distance, units: :distance) %> </dd>
    <dt><strong><%= ServiceOrder.human_attribute_name(:goods_weight) %>:</strong></dt><dd> <%= @service_order.goods_weight %> kg</dd>
    <dt><%= ServiceOrder.human_attribute_name(:comments) %>: </dt><dd><%= @service_order.comments %></dd> 
    <dt><%= ServiceOrder.human_attribute_name(:status) %>: </dt><dd><%= t(@service_order.status) %></dd> 
  </dl>
</section>

