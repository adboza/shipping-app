<div class="container-fluid mb-3">
  <%= form_with(model: @service_order) do |f| %>
    <div>
      <%= f.label :departure_address, class:"form-label" %>:
      <%= f.text_field :departure_address, placeholder:"Ex.: Rua Cascavel, 8241 Curitiba - PR", class:"form-control" %>
    </div>
    <div>
      <%= f.label :delivery_address, class:"form-label" %>:
      <%= f.text_field :delivery_address, placeholder:"Ex.: Praça Tiradentes, 1 Curitiba - PR",class:"form-control" %>
    </div>
    <div>
      <%= f.label :shipping_distance, class:"form-label" %>:
      <%= f.number_field :shipping_distance, placeholder:"Distância em metros (m)!", class:"form-control" %>
    </div>
    <div>
      <%= f.label :goods_weight, class:"form-label" %>:
      <%= f.number_field :goods_weight, placeholder:"Peso em quilogramas (kg)!", class:"form-control" %>
    </div>
    <div>
      <%= f.label :comments, class:"form-label" %>:
      <%= f.text_field :comments, class:"form-control" %>
    </div>
    <div>
      <%= f.submit 'Salvar', class:"btn btn-warning navbar-brand"%>
    </div>
  <%end%>
</div>
