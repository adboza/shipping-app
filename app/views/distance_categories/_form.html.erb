<div class="container-fluid mb-3">
  <%= form_with(model: [@delivery_modality, @distance_category]) do |f| %>
    <div>
      <%= f.label :min_distance, class:"form-label" %>:
      <%= f.number_field :min_distance, class:"form-control", placeholder:"Preencher em metros!" %>
    </div>
    <div>
      <%= f.label :max_distance, class:"form-label" %>:
      <%= f.number_field :max_distance, class:"form-control", placeholder:"Preencher em metros!" %>
    </div>
    <div>
      <%= f.label :delivery_time, class:"form-label" %>:
      <%= f.number_field :delivery_time, class:"form-control", placeholder:"Preencher em horas!" %>
    </div>
    <div>
      <%= f.label :distance_price, class:"form-label" %>:
      <%= f.number_field :distance_price, step: 0.01, class:"form-control" %>
    </div>
    
    <div>
      <%= f.submit 'Salvar', class:"btn btn-warning navbar-brand" %>
    </div>
  <%end%>
</div>