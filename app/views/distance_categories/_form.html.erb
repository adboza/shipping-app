<div>
  <%= form_with(model: [@delivery_modality, @distance_category]) do |f| %>
    <div>
      <%= f.label :min_distance %>:
      <%= f.number_field :min_distance %>
    </div>
    <div>
      <%= f.label :max_distance %>:
      <%= f.number_field :max_distance %>
    </div>
    <div>
      <%= f.label :distance_price %>:
      <%= f.number_field :distance_price, step: 0.01 %>
    </div>
    
    <div>
      <%= f.submit 'Salvar' %>
    </div>
  <%end%>
</div>